<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.florify.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.florify.ui.forum.ForumFragment"
        android:label="@string/history"
        tools:layout="@layout/fragment_forum" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.florify.ui.profile.ProfileFragment"
        android:label="@string/title_encyclopedia"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_ensiklopedia"
        android:name="com.example.florify.ui.ensiklopedia.EncyclopediaFragment"
        android:label="@string/title_encyclopedia"
        tools:layout="@layout/fragment_encyclopedia" />
</navigation>
